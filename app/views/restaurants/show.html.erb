<h1><%= @restaurant.name %></h1>
<h4>Details:</h4>

<ul>
  <li>Address - <%= @restaurant.address %></li>
  <li>Phone Number - <%= @restaurant.phone_number %></li>
  <li>Category - <em><%= @restaurant.category %></em></li>
</ul>
<hr>

<h5>Reviews</h5>
<ul>
  <% @restaurant.reviews.each do |review| %>
  <li> <%= review.content %> - <%= review.rating%> ⭐️ (rating) </li>
  <% end %>
</ul>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: Review::RATINGS %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>

<hr>
<%= link_to "Back to Restaurants", restaurants_path, class: "btn btn-info" %>
